<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	
	<servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>com.ers.servlets.LoginVerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>EmployeeHome</servlet-name>
	<servlet-class>com.ers.servlets.EmployeeHomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>EmployeeHome</servlet-name>
	<url-pattern>/employee</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Info</servlet-name>
	<servlet-class>com.ers.servlets.EmployeeInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Info</servlet-name>
	<url-pattern>/info</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Logout</servlet-name>
	<servlet-class>com.ers.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Logout</servlet-name>
	<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Request</servlet-name>
	<servlet-class>com.ers.servlets.SubmitRequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Request</servlet-name>
	<url-pattern>/request</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>ShowSetter</servlet-name>
	<servlet-class>com.ers.servlets.RequestShowSetterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>ShowSetter</servlet-name>
	<url-pattern>/show</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Manager</servlet-name>
	<servlet-class>com.ers.servlets.ManagerHomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>Manager</servlet-name>
	<url-pattern>/manager</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>ManagerDisplay</servlet-name>
	<servlet-class>com.ers.servlets.ManagerDisplayServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>ManagerDisplay</servlet-name>
	<url-pattern>/display</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>ResolveRequest</servlet-name>
	<servlet-class>com.ers.servlets.RequestResolveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>ResolveRequest</servlet-name>
	<url-pattern>/resolve</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>AllResolvedRequest</servlet-name>
	<servlet-class>com.ers.servlets.AllResolvedServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>AllResolvedRequest</servlet-name>
	<url-pattern>/all/resolved</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>AllPendingRequest</servlet-name>
	<servlet-class>com.ers.servlets.AllPendingServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>AllPendingRequest</servlet-name>
	<url-pattern>/all/pending</url-pattern>
	</servlet-mapping>
	
</web-app>